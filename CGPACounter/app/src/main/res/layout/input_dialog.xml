<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TVNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/ETName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/TVNameTitle"
        android:layout_toRightOf="@id/TVNameTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="Enter the name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/TVIDTitle"
        android:layout_below="@id/ETName"
        android:layout_alignEnd="@id/TVNameTitle"
        android:layout_alignRight="@id/TVNameTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/ETID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETName"
        android:layout_toEndOf="@id/TVIDTitle"
        android:layout_toRightOf="@id/TVIDTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="Enter the ID"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/TVCGPATitle"
        android:layout_below="@id/ETID"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/ETCGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETID"
        android:layout_toEndOf="@id/TVCGPATitle"
        android:layout_toRightOf="@id/TVCGPATitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="Enter the CGPA"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/UpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETCGPA"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Update"/>

</RelativeLayout>