<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shhridoy.agecalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:gravity="center">

    <TextView
        android:id="@+id/TVNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/ETName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/TVNameTitle"
        android:layout_toRightOf="@id/TVNameTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="Enter the name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="15dp"/>

    <Button
        android:id="@+id/BtnDofBirth"
        android:layout_below="@id/ETName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose birth date "
        android:textStyle="normal"
        android:textColor="#000000"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/ETDofBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETName"
        android:layout_toEndOf="@id/BtnDofBirth"
        android:layout_toRightOf="@id/BtnDofBirth"
        android:layout_alignTop="@id/BtnDofBirth"
        android:layout_alignBottom="@id/BtnDofBirth"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="DofB"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"/>

    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETDofBirth"
        android:text="Calculate"/>

    <TextView
        android:id="@+id/TVAge"
        android:layout_below="@id/ETDofBirth"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/calculateBtn"
        android:layout_toRightOf="@id/calculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/calculateBtn"
        android:layout_alignBottom="@id/calculateBtn"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"/>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save in database"
        android:layout_below="@id/calculateBtn"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>


</RelativeLayout>
