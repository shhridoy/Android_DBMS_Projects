<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TVNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/ETName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/TVNameTitle"
        android:layout_toRightOf="@id/TVNameTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="Enter the name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/BTNDofB"
        android:layout_below="@id/ETName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose birth date: "
        android:textStyle="normal"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/ETDofB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETName"
        android:layout_toEndOf="@id/BTNDofB"
        android:layout_toRightOf="@id/BTNDofB"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/TVAGETitle"
        android:layout_below="@id/ETDofB"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/ETAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETDofB"
        android:layout_toEndOf="@id/TVAGETitle"
        android:layout_toRightOf="@id/TVAGETitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/UpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETAGE"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Update"/>

</RelativeLayout>